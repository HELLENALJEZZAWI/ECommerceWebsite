@model IEnumerable<ECommerceWebsite.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
    string GetStatusClass(string status)
    {
        return status switch
        {
            "Active" => "bg-success",
            "Deleted" => "bg-danger",
            "OutOfStock" => "bg-warning",
            _ => "bg-primary"
        };
    }
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}


