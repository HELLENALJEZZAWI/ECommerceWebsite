<!-- Content Wrapper -->
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Tables /</span> User Table</h4>

        <!-- User Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title">User Table</h5>
                <a asp-action="Create" class="btn btn-yellow">Create New</a>
            </div>
            <div class="table-responsive text-nowrap">
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.ProductName)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.ProductDescription)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.Price)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.Discount)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.ProductImage)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.ProductStatus)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.Category.CategoryName)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.Stock)
                </strong>
            </th>
            <th>
                <strong style="color:black;">
                @Html.DisplayNameFor(model => model.DateCreated)
                </strong>
            </th>
            <th>Action </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong style="color:black;">
                    @Html.DisplayFor(modelItem => item.ProductName)
                    </strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    <img src="~/images/productsImages/@item.ProductImage" alt="@item.ProductName" style="width:50px; height:50px;" />
                </td>
                <td>
                    <span class="badge @GetStatusClass(item.ProductStatus.ToString())">
                        @Html.DisplayFor(modelItem => item.ProductStatus)
                    </span>
                 </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item text-warning" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.ProductID">
                                <i class="bx bx-edit-alt me-1"></i> Edit
                            </a>
                            <a class="dropdown-item text-info" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.ProductID">
                                <i class="bx bx-show-alt me-1"></i> Details
                            </a>
                            <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal" data-productid="@item.ProductID">
                                <i class="bx bx-trash me-1"></i> Delete
                            </a>
                            <form asp-action="ActiveProduct" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.ProductID" />
                                <button type="submit" class="dropdown-item text-success">
                                    <i class="bx bx-check me-1"></i> Active
                                </button>
                            </form>
                            <form asp-action="SetProductToOutOfStuck" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.ProductID" />
                                <button type="submit" class="dropdown-item text-warning">
                                    <i class="bx bx-check me-1"></i> Set Out of Stock
                                </button>
                            </form>
                        </div>
                    </div>
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var productId = button.getAttribute('data-productid');
            var form = document.getElementById('deleteForm');
            form.setAttribute('action', '@Url.Action("SoftDelete")/' + productId);
        });
    });

</script>

<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: separate;
        border-spacing: 0 15px;
    }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: middle;
            border-top: none;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: none;
        }

    .table-hover tbody tr:hover {
        color: #212529;
        background-color: rgba(0, 0, 0, 0.075);
    }

    .fw-bold {
        font-weight: bold;
    }

    .badge {
        display: inline-block;
        padding: 0.35em 0.65em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.375rem;
    }

    .bg-primary {
        background-color: #007bff !important;
        color: #fff;
    }

    .bg-success {
        background-color: #28a745 !important;
        color: #fff;
    }

    .bg-secondary {
        background-color: #6c757d !important;
        color: #fff;
    }

    .dropdown-toggle::after {
        display: none;
    }

    .dropdown-menu {
        min-width: auto;
        z-index: 1050;
    }

    .btn-light {
        background-color: #f8f9fa;
        color: #212529;
    }

    .modal-content {
        border-radius: 0.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #ff6b6b;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }

        .modal-header .btn-close {
            padding: 0.5rem;
            margin: -0.5rem -0.5rem -0.5rem auto;
            border: none;
            cursor: pointer;
            color: black;
        }

    .modal-title {
        color: white;
    }

    .modal-body {
        padding: 1.5rem;
        font-size: 1rem;
        color: #212529;
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 1rem;
        border-top: 1px solid #dee2e6;
        border-bottom-left-radius: 0.5rem;
        border-bottom-right-radius: 0.5rem;
    }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 1rem;
        font-weight: 500;
        transition: background-color 0.2s ease;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
<style>
    .btn-yellow {
        background-color: #ffc107; /* Bootstrap yellow */
        border-color: #ffc107;
        color: floralwhite; /* Dark text for contrast */
    }

        .btn-yellow:hover {
            background-color: #e0a800; /* Slightly darker yellow on hover */
            border-color: #e0a800;
            color: floralwhite; /* Maintain text color */
        }
</style>