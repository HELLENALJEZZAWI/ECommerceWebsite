    <style>
        .navbar {
            background-color: #fafbfc;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            transition: background-color 0.3s, border-bottom 0.3s;
            list-style: none;
            height:80px; /* adjust the height as needed */
            padding-top: 10px;
            padding-bottom: 10px;
        }

        



        .navbar-nav .nav-link {
            color: #331391 !important;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            transition: color 0.3s, background-color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #888888 !important;
                border-radius: 0.25rem;
            }

        .navbar-nav .dropdown-menu {
            background-color: #ffffff;
            border: none;
            outline: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar-nav .dropdown-menu .dropdown-item {
                color: #331391;
                font-size: 0.9rem;
            }

                .navbar-nav .dropdown-menu .dropdown-item:hover {
                    background-color: #331391;
                    color: #ffffff !important;
                }

        .avatar {
            position: relative;
            width: 2.375rem;
            height: 2.375rem;
            cursor: pointer;
            overflow: hidden;
            border-radius: 50%;
            transition: transform 0.3s;
            margin-right: 0.5rem; /* Adjust this value to move the avatar to the left */
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .avatar:hover {
                transform: scale(1.1);
            }

        .navbar-right {
            display: flex;
            align-items: center;
            margin-right: 9rem; /* Adjust this value as needed to move the elements to the left */
        }


        .cart-icon {
            position: relative;
            display: flex;
            align-items: center;
            margin-right: 1rem; /* Adjust spacing if needed */
            font-size: 20px; /* Set the icon size */
            color: #331391; /* Icon color */
            transition: color 0.3s, background-color 0.3s; /* Smooth color transitions */
        }


        .avatar {
            position: relative;
            display: inline-block;
        }

        .avatar {
            position: relative;
            display: inline-block;
        }

        .change-image-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: none;
            z-index: 10;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            padding: 10px;
            cursor: pointer;
        }

        .avatar:hover .change-image-icon {
            display: block;
        }

        .avatar img {
            transition: opacity 0.3s;
        }

        .avatar:hover img {
            opacity: 0.7;
        }

        main {
            padding-top: 5rem; /* To prevent content from being hidden behind the fixed navbar */
        }
    </style>
</head>
@{
    @using System.Security.Claims
    @using ECommerceWebsite.Models.ViewModals

    var userID = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    var userImage = User.FindFirst(CustomClaimTypes.UserImage)?.Value;
    var userName = User.FindFirst(ClaimTypes.Name)?.Value;
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-light">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="~/assetsLanging/img/logo/logo.png" alt="Logo" style=" height: 25px; margin-top: -5px;">
                </a>
            
                <!-- Navbar Links -->
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#about-us">AboutUs</a></li>

                        <li class="nav-item"><a class="nav-link" href="#BLOG">Gallery</a></li>

                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="EventPage" asp-action="Index">Event</a></li>
                    </ul>

                    <!-- Cart and User Menu -->
                    <ul class="navbar-nav">
                        <!-- Cart Icon -->
                        <li class="nav-item position-relative cart-icon">
                            <a class="nav-link" asp-controller="Cart1" asp-action="Index">
                                <i class="fas fa-shopping-cart" style="font-size: 15px; color: #331391 !important;"></i>
                                <span style="
                                    background-color:#331391 !important;
                                    color: #fff;
                                    font-size: 0.75rem;
                                    padding: 0.25em 0.6em;
                                    border: 1px solid #331391 !important;
                                    box-shadow: 0 0 0.2rem rgba(0, 0, 0, 0.1);
                                    position: absolute;
                                    top: -8px;
                                    right: -8px;
                                    border-radius: 50%;"
                                      class="badge rounded-pill">
                                    @(int.TryParse(Context.Session.GetString("CartCounter"), out int count) ? count : 0)
                                </span>
                            </a>
                        </li>

                        <!-- User Menu -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img src="~/images/usrProfileImages/@userImage" alt="User Photo" class="rounded-circle" style="height: 25px; width: 25px;">
                                    @userName
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="EditUser" asp-route-id="@userID">Settings</a>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Log Out</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user" style="font-size: 15px; color: #331391 !important"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="loginDropdown">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
