    </ul>
</div>

<!-- Content Wrapper -->
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Tables /</span> User Table</h4>

        <!-- User Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title">User Table</h5>
                <a asp-action="Create" class="btn btn-yellow ">Create New</a>
            </div>
            <div class="table-responsive text-nowrap">

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>


<style>
    /* General Styles */
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

        .table th, .table td {
            padding: 1rem;
            vertical-align: middle;
        }

        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 700;
    }

    /* Button Styles */
    .btn {
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-yellow {
        background-color: #f7c02b;
        color:floralwhite;
        border: none;
    }

        .btn-yellow:hover {
            background-color: #d9a421;
        }

    .btn-white {
        background-color: white;
        color: floralwhite;
        border: 1px solid #ced4da;
    }

        .btn-white:hover {
            background-color: #e9ecef;
        }
</style>